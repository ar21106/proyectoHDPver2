@model IEnumerable<ProyectoMVC.Descuentos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Generacion Carta de Renta</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.renta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isss)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.afp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.otros)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.nombres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.renta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isss)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.afp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.otros)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleados.nombres)
        </td>
        <td>
            
            @Html.ActionLink("Generar Carta", "Details", new { id=item.idRetenciones })
         
        </td>
    </tr>
}

</table>
