@model ProyectoMVC.Empleados

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta Empleado</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombres: </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>Apellidos: </dt>
        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>Cargo: </dt>
        <dd>
            @Html.DisplayFor(model => model.cargos.cargo)
        </dd>

        <dt>Fecha de ingreso: </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>

        <dt>Sueldo: </dt>
        <dd>
            @Html.DisplayFor(model => model.salario)
        </dd>

        <dt>E-mail: </dt>
        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>Pais: </dt>
        <dd>
            @Html.DisplayFor(model => model.pais1.nomPais)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idEmpleado }, new { @class = "btn btn-primary btn-sm" })
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-success btn-sm" })
  
</p>
