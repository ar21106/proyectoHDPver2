@model ProyectoMVC.Empleados

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Empleado</h2>

<h3>Esta seguro de eliminar el empleado?</h3>
<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombres: </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>Apellidos: </dt>
        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>Cargo: </dt>
        <dd>
            @Html.DisplayFor(model => model.cargos.cargo)
        </dd>

        <dt>Fecha de ingreso: </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>

        <dt>Sueldo: </dt>
        <dd>
            @Html.DisplayFor(model => model.salario)
        </dd>

        <dt>E-mail: </dt>
        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>Pais: </dt>
        <dd>
            @Html.DisplayFor(model => model.pais1.nomPais)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-success btn-sm" })
</div>
    }
</div>
