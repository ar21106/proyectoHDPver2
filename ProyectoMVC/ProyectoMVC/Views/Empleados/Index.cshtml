@model IEnumerable<ProyectoMVC.Empleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Planilla de Empleados</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th style="width:50px">
            @Html.DisplayNameFor(model => model.logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pais1.nomPais)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td style="width:50px">
            @Html.DisplayFor(modelItem => item.logo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais1.nomPais)
        </td>
        <td style="width:300px">

            @Html.ActionLink("Editar", "Edit", new { id = item.idEmpleado }, new { @class = "btn btn-success btn-sm" })
            @Html.ActionLink("Consultar", "Details", new { id = item.idEmpleado }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idEmpleado }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}
</table>
